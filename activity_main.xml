<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#CEDFBD"
    tools:context="com.nyit.libsystem.MainActivity" >

    <Button
        android:id="@+id/btnAdmin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:text="Admin"
        android:textColor="#000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnReader"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnAdmin"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="10dp"
        android:text="Faculty"
        android:textColor="#000"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnabout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnReader"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="10dp"
        android:text="About"
        android:textColor="#000"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnclose"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnabout"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="10dp"
        android:text="Close App"
        android:textColor="#000"
        android:textStyle="bold" />
    <Button
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:background="#d9dbff"
         android:layout_centerHorizontal="true"
         android:text="Library App"
        android:textSize="30dp"
        android:textStyle="italic|bold"/>



</RelativeLayout>
