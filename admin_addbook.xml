    <LinearLayout
        android:id="@+id/llExistingBook"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="Acc no. :"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/spISBN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#000000"
                android:prompt="@string/ISBN_prompt" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llnewBook"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="420dp"
            android:layout_height="80dp"
            android:text="Add New Book"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:background="@color/clr"/>
        <View style="@style/dividerHorizontal"/>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

         <!--   <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="Book Id.:"
                android:layout_marginTop="20dp"

                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/edtISBN"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:ems="10" >
            </EditText>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="Author :"
                android:layout_marginTop="20dp"

                android:textAppearance="?android:attr/textAppearanceMedium" />


            <EditText
                android:id="@+id/edtAuthor"

                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="Title :"
                android:layout_marginTop="20dp"

                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/edtTitle"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:ems="10" >
            </EditText>
        </LinearLayout>
        <!--  android:id="@+id/edtTitle"-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="Cost Price :"
                android:layout_marginTop="20dp"

                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/edtCost"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:ems="10" >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="Year of Print :"
                android:layout_marginTop="20dp"

                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/edtYop"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:ems="10" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="Publisher :"
                android:layout_marginTop="20dp"

                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/spPublisher"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:background="#000000"
                android:prompt="@string/publisher_prompt" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCommon"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="edition:"
                android:layout_marginTop="20dp"

                android:textAppearance="?android:attr/textAppearanceMedium" />


            <Spinner
                android:id="@+id/spBranch"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:background="#000000"
                android:prompt="@string/branch_prompt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="Rack No :"
                android:layout_marginTop="20dp"

                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/spPosition"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:background="#000000"
                android:prompt="@string/position_prompt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="Date :"
                android:layout_marginTop="20dp"

                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/edtDate"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:ems="10" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="No. of Copies:"
                android:layout_marginTop="20dp"

                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/edtNoc"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:ems="10" >
            </EditText>
        </LinearLayout>


        <Button
            android:id="@+id/btnLlExisting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Add Book"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/btn1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Clear"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>
</LinearLayout>
</ScrollView>