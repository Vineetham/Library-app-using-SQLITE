<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#CEDFBD"
    android:layout_height="match_parent">

    <AutoCompleteTextView
        android:id="@+id/books"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter Book Title"
        android:ems="10"
        android:drawableRight="@drawable/symbol"
        android:inputType="text"></AutoCompleteTextView>

    <Button
        android:id="@+id/btnSearchByTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="Search By Book Title" />


    <AutoCompleteTextView
        android:id="@+id/authors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter Book Author"
        android:ems="10"
        android:drawableRight="@drawable/symbol"
        android:inputType="text" />

    <Button
        android:id="@+id/btnSearchByAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="Search By Book Author" />


   <!-- <EditText
